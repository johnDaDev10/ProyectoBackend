<head>
    <meta charset="UTF-8">
    <meta
        name="viewport"
        content="width=device-width, initial-scale=1.0"
    >
    <link
        rel="stylesheet"
        href="/css/bootstrap.min.css"
    >
    <link
        rel="stylesheet"
        href="/css/chat.css"
    >
    <link
        rel="stylesheet"
        href="/css/style.css"
    >
    <title>Informaci√≥n Producto </title>
</head>

<div class="container mt-5 ">
  <h2 class="text-center mb-4">{{this.title}}</h2>
  <h2 class="text-center mb-4">{{data.title}}</h2>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 containerProduct">
    
    <div class="col mb-4">
    
        <div class="card h-100 bg-light cardProduct">
          <div class="card-header  text-white">
            <i class="bi bi-tag"></i> Code: {{data.code}}
          </div>
          <div class="card-body">
            <h5 class="card-title text-white">{{data.title}}</h5>
            <ul class="list-unstyled">
              <li><i class="bi bi-info-circle"></i> ID: {{data._id}}</li>
              <li><i class="bi bi-file-text"></i> Description: {{data.description}}</li>
              <li><i class="bi bi-currency-dollar"></i> Price: ${{data.price}}</li>
              <li><i class="bi bi-grid"></i> Category: {{data.category}}</li>
              <li><i class="bi bi-check-circle"></i> Status: {{data.status}}</li>
              <li><i class="bi bi-box"></i> Stock: {{data.stock}}</li>
              <li>
                <i class="bi bi-image"></i> Image: <img
                  src="{{data.thumbnail}}"
                  alt="{{data.title}}"
                  class="img-fluid mt-2"
                >
              </li>
            </ul>


          </div>
          {{!-- <a href="/api/carts/{{this.idCart}}/product/{{this.idProduct}}"> Esto para cuando se le vaya a dar funcion al boton de agregar al carrito --}}
            <button
              type="button"
              class="addCard btn btn-success position-absolute top-0 end-0"
            ><i class="bi bi-cart-plus"></i></button>
          {{!-- </a> --}}
        </div>
     
    </div>
    
  </div>

</div>